{
  "name": "md-genie-logiciel",
  "version": "1.0.0",
  "description": "Course for Genie Lociel in Paris Descartes",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir -p ./dist/js && mkdir -p ./dist/plugin",
    "copy:robots": "cp ./web/robots.txt ./dist/",
    "copy:md": "cp -R ./doc/ ./dist/doc",
    "copy": "npm run copy:robots && npm run copy:md",
    "reveal:css": "cp -R ./node_modules/reveal.js/css ./dist/css",
    "reveal:lib": "cp -R ./node_modules/reveal.js/lib ./dist/lib",
    "reveal:plugin": "cp -R ./node_modules/reveal.js/plugin/print-pdf ./node_modules/reveal.js/plugin/markdown ./node_modules/reveal.js/plugin/highlight ./dist/plugin",
    "reveal": "npm run reveal:css && npm run reveal:lib && npm run reveal:plugin",
    "minify:html": "./node_modules/.bin/html-minifier -o ./dist/index.html -c ./html-minifier.json ./web/index.html",
    "minify:js": "./node_modules/.bin/uglifyjs ./node_modules/reveal.js/js/reveal.js --compress --mangle --output ./dist/js/reveal.js",
    "minify": "npm run minify:html && npm run minify:js",
    "build": "npm run clean && npm run reveal && npm run minify && npm run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ViBiOh/md-genie-logiciel.git"
  },
  "keywords": [
    "markdown",
    "course",
    "quality",
    "genie",
    "logiciel"
  ],
  "author": "Vincent Boutour <vincent.boutour@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ViBiOh/md-genie-logiciel/issues"
  },
  "homepage": "https://github.com/ViBiOh/md-genie-logiciel#readme",
  "dependencies": {
    "reveal.js": "git+https://github.com/hakimel/reveal.js.git"
  },
  "devDependencies": {
    "uglify-js": "latest",
    "html-minifier": "latest"
  }
}
